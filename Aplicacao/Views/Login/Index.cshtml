@model LoginModel
@{

	Layout = "_LayoutDeslogada";
	ViewData["Title"] = "Login";
}
<div class="mt-3">
@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert">
			<button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
			@TempData["MensagemErro"]
		</div>

	}
</div>


<div class="text-center">

<h3 class="diplay-3 mt-5">Login</h3>

</div>
<form class="mt-5" asp-controller="Login" asp-action="Entrar" method="post">
  <div class="form-group">
    <label for="login">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu login">
    @Html.ValidationMessageFor(x => x.Login)
  </div>
  <div class="form-group mt-4">
    <label for="Senha">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua senha">
    @Html.ValidationMessageFor(x => x.Senha)
  </div>

  <div class="d-grid gap-2 d-md-flex justfy-content-md-start">
  <button type="submit" class="btn btn-primary mt-4">Entrar</button>
  </div>

</form>

	<div class="mt-2 d-grid gap-2 d-md-flex justfy-content-md-start">
	<a role="button" asp-controller="Usuario" asp-action="CriarLogin" class="btn btn-secondary mt-4">Cadastrar</a>
	 </div>